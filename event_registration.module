<?php

/**
 * Implements hook_mail().
 */
function event_registration_mail($key, &$message, $params) {

  switch ($key) {

    case 'registration_mail':

      $message['subject'] = 'Event Registration Confirmation';

      $body = [];
      $body[] = 'Hello ' . $params['name'] . ',';
      $body[] = '';
      $body[] = 'You have successfully registered for the event.';
      $body[] = '';
      $body[] = 'Event Name: ' . $params['event_name'];
      $body[] = 'Event Date: ' . $params['event_date'];
      $body[] = 'Category: ' . $params['category'];
      $body[] = '';
      $body[] = 'Thank you.';

      $message['body'] = $body;

      break;

  }

}
